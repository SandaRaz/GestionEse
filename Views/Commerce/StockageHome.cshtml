@using SIProject.Models.Entreprises.Commerce
@using SIProject.Models.Structures.Commerce
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Home";
    string idEse = Context.Session.GetString("idEntreprise") ?? "";
    StructStockage ss = new StructStockage(idEse);
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Stockage/</span> Mouvement d'entrer de stock d'article</h4>
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-body">
                <form asp-controller="Commerce" asp-action="StockerArticle" method="POST" class="twocolsdiv">
                    <input type="hidden" name="idEse" value="@idEse"/>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Article</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-box"></i>
                                </span>
                                <select id="articleChoisit" name="idArticle" class="form-control">
                                    @foreach(Article article in ss.articles){
                                        <option value="@article.Id">@article.Nom</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div></div>
                    
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Qté</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-pen"></i>
                                </span>
                                <input type="number" step="0.5" name="quantite" class="form-control" id="basic-icon-default-fullname" placeholder="Quantité article" aria-label="Quantité article" aria-describedby="basic-icon-default-fullname2" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Unité</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-number"></i>
                                </span>
                                <select id="unitesArticle" name="uniteQuantite" class="form-control">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">PU</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-pen"></i>
                                </span>
                                <input type="number" step="0.5" name="prixUnitaire" class="form-control" id="basic-icon-default-fullname" placeholder="Prix Unitaire" aria-label="Prix Unitaire" aria-describedby="basic-icon-default-fullname2" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Unité</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-number
"></i>
                                </span>
                                <select id="unitesPuArticle" name="unitePU" class="form-control">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Date</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-calendar"></i>
                                </span>
                                <input type="date" name="dates" class="form-control" id="basic-icon-default-fullname" placeholder="Dates" aria-label="Dates" aria-describedby="basic-icon-default-fullname2" />
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.infoNonComplet != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                          <strong>Erreur: </strong> @ViewBag.infoNonComplet
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Acheter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/commerce.js"></script>