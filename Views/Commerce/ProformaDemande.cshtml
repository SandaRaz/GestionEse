@using SIProject.Models.Entreprises.Commerce
@using SIProject.Models.Structures.Commerce
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Home";

    StructProformaDemande spd = new StructProformaDemande();
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Demmande /</span> Proforma</h4>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <h5 class="card-header">Liste email recu</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">
                    @foreach (Mail mail in spd.mails)
                    {
                        <a href="@Url.Action("ShowProformaMail", "Commerce", new { idmail = mail.MessageId })">
                            <button type="button" style="width: 100%; margin-bottom: 3%" class="btn btn-sm btn-primary">Mail @mail.Sender</button>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                @if(ViewBag.showMail != null){
                    Mail showMail = ViewBag.showMail;
                    <h5 class="card-header">Contenu email</h5>
                    <div class="card-body demo-vertical-spacing demo-only-element">
                        <div class="list-group">
                          <a href="javascript:void(0);" class="list-group-item list-group-item-action active">
                              <div>
                                  <p>Venant de: <b>@showMail.Sender</b></p>
                                  <p>Pour: <b>@showMail.Receiver</b></p>
                                  <p>Sujet: <b>@showMail.Subject</b></p>
                              </div>
                          </a>
                          <a href="javascript:void(0);" class="list-group-item list-group-item-action">
                              <div>
                                  <p>
                                      @showMail.Content
                                  </p>
                              </div>
                          </a>
                          <a href="javascript:void(0);" class="list-group-item list-group-item-action">
                              <div>
                                  <p>Dates: <b>@showMail.Dates</b></p>
                              </div>
                          </a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="input-group input-group-merge">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
        </div>
    </div>
</div>
