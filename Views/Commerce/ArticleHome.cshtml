@using SIProject.Models.Entreprises.Commerce
@using SIProject.Models.Structures.Commerce;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Home";
    string idEse = Context.Session.GetString("idEntreprise") ?? "";
    StructArticle structArticle = new StructArticle();
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Input groups</h4>
    <form asp-controller="Commerce" asp-action="AjouterNouveauArticle" method="POST">
        <input type="hidden" name="idEse" value="@idEse"/>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <h5 class="card-header">ARTICLE</h5>
                    <div class="card-body demo-vertical-spacing demo-only-element">
                        <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="bx bx-pen"></i>
                            </span>
                            <input type="text" name="nomArticle" class="form-control" id="basic-icon-default-fullname" placeholder="Nom de l'article" aria-label="Nom de l'article" aria-describedby="basic-icon-default-fullname2" />
                        </div>

                        <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="bx bx-pen"></i>
                            </span>
                            <select name="typeArticle" class="form-control">
                                <option value="5">Achat pour Stock</option>
                                <option value="1">Achat pour Besoin</option>
                                <option value="10">Achat pour Immobilier</option>
                            </select>
                        </div>

                        
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <h5 class="card-header">UNITE</h5>
                    <div class="card-body demo-vertical-spacing demo-only-element">
                        <div class="input-group input-group-merge">
                            <span id="plusUnite basic-icon-default-fullname2" class="input-group-text" style="border: 1px solid gray;">
                                <i class="bx bx-plus"></i>
                            </span>
                        </div>

                        <div id="ligneUnite">
                            <div class="input-group input-group-merge">
                                <select name="unite" class="form-control">
                                    <option value="" selected disabled>- Unité -</option>
                                    @foreach (Unite unite in structArticle.unites)
                                    {
                                        <option value="@unite.Id">@unite.Nom</option>
                                    }
                                </select>
                            </div>
                            <div class="input-group input-group-merge">
                                <input type="number" step="0.5" name="valeurUnite" class="form-control" id="basic-icon-default-fullname" placeholder="Valeur" aria-label="Valeur" aria-describedby="basic-icon-default-fullname2" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="input-group input-group-merge">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript" src="~/js/commerce.js" defer></script>