@using SIProject.Models.Entreprises.Commerce
@using SIProject.Models.Structures.Commerce
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Home";
    StructProformaHome sph = new StructProformaHome();
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light"></span> Proforma</h4>
    <div class="col-xxl">
        <div class="card" mb-4>
            <h5 class="card-header">Listes des achats en cours</h5>
            <div class="table-responsive text-nowrap">
                <form id="BesoinArticleForm" method="POST" href="@Url.Action("AchatBesoin", "Commerce")">
                    <table class="table">
                        <thead>
                            <tr id="achatBesoinEntete">
                                <th>Nom</th>
                                <th>Quantité</th>
                                <th>Date</th>
                                <th>Proformats</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach(MvtDetaillee achat in sph.achatEnAttentes)
                            {
                                <tr style="background-color: @achat.Background;">
                                    <td>@achat.Nomarticle</td>
                                    <td>@achat.Entrer</td>
                                    <td>@achat.Dates</td>
                                    <td>
                                        <a href="@Url.Action("ProformaAjout", "Commerce", new{ idMvt = achat.Id })">
                                            <button type="button" class="btn btn-sm btn-primary">Listes proformats</button>
                                        </a>
                                    </td>
                                </tr>   
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
