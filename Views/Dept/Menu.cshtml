@using SIProject.Models.Structures
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Home";

    string jsonDept = Context.Session.GetString("deptMenuObject") ?? "";
    StructDeptMenu smd = new StructDeptMenu(jsonDept);
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="pb-1 mb-4">MENU DEPARTEMENT @smd.dept.Nom.ToUpper()</h4>
        <hr />
        <div class="row mb-5" style="display: grid; grid-template-columns: 33.33% 33.33% 33.33%;">
            <a href="@Url.Action("AjoutPoste", "Dept", new { idDept = smd.dept.Id })">
                <div class="col-md ese-list-card">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img class="card-img card-img-left ese-list-logo" src="~/img/essentials/PackEssentials/id-cardline.png" alt="Card image" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Poste</h5>
                                    <p class="card-text">
                                    </p>
                                    <p class="card-text"><small class="text-muted">Gerer les postes dans ce département</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            <a href="">
                <div class="col-md ese-list-card">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img class="card-img card-img-left ese-list-logo" src="~/img/essentials/PackEssentials/userline.png" alt="Card image" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Employé</h5>
                                    <p class="card-text">
                                    </p>
                                    <p class="card-text"><small class="text-muted">Gerer les employés dans ce département</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            <a href="">
                <div class="col-md ese-list-card">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img class="card-img card-img-left ese-list-logo" src="~/img/essentials/PackEssentials/cartline.png" alt="Card image" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Achat</h5>
                                    <p class="card-text">
                                    </p>
                                    <p class="card-text"><small class="text-muted">Faire des achats de besoin pour ce département</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="content-backdrop fade"></div>
    </div>
</div>